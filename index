    <script>
      // ==================== SLIDESHOW LOGIC ====================
      const slides = document.querySelectorAll(".slide");
      let currentSlide = 0;

      function nextSlide() {
        if (slides.length === 0) return;
        slides[currentSlide].classList.remove("active");
        currentSlide = (currentSlide + 1) % slides.length;
        slides[currentSlide].classList.add("active");
      }
      setInterval(nextSlide, 8000);

      // ==================== DYNAMIC JOB SCROLL LOGIC (GOOGLE SHEET) ====================
      const sheetId = "1N1iaw2kg0KSc9R173VLesBAyOWdFzbB-s03YpzVZNvo";
      const range = "Sheet1!A:A";
      const googleSheetUrl = `https://docs.google.com/spreadsheets/d/${sheetId}/gviz/tq?tqx=out:csv&gid=0&range=${range}`;
      const jobListContainer = document.getElementById("jobList");

      async function fetchJobData() {
        try {
          const response = await fetch(googleSheetUrl);
          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }
          const csvText = await response.text();
          const jobs = csvText
            .trim()
            .split("\n")
            .slice(1)
            .map((job) => job.trim().replace(/^"|"$/g, ""))
            .filter((job) => job.length > 2);
          createJobScroller(jobs);
        } catch (error) {
          console.error("Gagal mengambil data dari Google Sheet:", error);
          jobListContainer.innerHTML = `<p class="job-item error" style="color:red; font-weight:600; text-align:center;">ERROR: Gagal memuat lowongan (Cek CORS/Link)</p>`;
        }
      }

      function createJobScroller(jobs) {
        if (jobs.length === 0) {
          jobListContainer.innerHTML = `<p class="job-item" style="text-align:center;">Tidak ada posisi terbuka saat ini.</p>`;
          jobListContainer.style.animation = "none";
          return;
        }

        const baseDurationPerItem = 2;
        const scrollDuration = Math.max(30, jobs.length * baseDurationPerItem);
        jobListContainer.style.animationDuration = `${scrollDuration}s`;

        const fragment = document.createDocumentFragment();
        const jobContent = document.createElement("div");
        jobContent.className = "job-content";

        jobs.forEach((jobText) => {
          const jobItem = document.createElement("p");
          jobItem.className = "job-item dynamic";
          jobItem.textContent = jobText;
          jobContent.appendChild(jobItem);
        });

        fragment.appendChild(jobContent);
        const jobContentDuplicated = jobContent.cloneNode(true);
        jobContentDuplicated.setAttribute("aria-hidden", "true");
        fragment.appendChild(jobContentDuplicated);

        jobListContainer.innerHTML = "";
        jobListContainer.appendChild(fragment);

        setTimeout(() => {
          const containerHeight = jobListContainer.parentElement.clientHeight;
          const contentHeight = jobListContainer.scrollHeight / 2;
          if (contentHeight < containerHeight) {
            jobListContainer.style.animationPlayState = "paused";
          }
        }, 100);
      }

      // ==================== HORIZONTAL SOCIAL ROLLER BUILDER ====================
      const socialData = [
        // Instagram
        {
          icon: `<svg fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.85s-.012 3.584-.07 4.85c-.148 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07s-3.584-.012-4.85-.07c-3.252-.148-4.771-1.691-4.919-4.919-.058-1.265-.07-1.645-.07-4.85s.012-3.584.07-4.85c.148-3.225 1.664-4.771 4.919 4.919 1.266-.058 1.644-.07 4.85-.07zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948s.014 3.667.072 4.947c.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072s3.667-.014 4.947-.072c4.358-.2 6.78-2.618 6.98-6.98.059-1.281.073-1.689.073-4.948s-.014-3.667-.072-4.947c-.2-4.358-2.618-6.78-6.98-6.98-1.281-.059-1.689-.073-4.948-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4s1.791-4 4-4 4 1.79 4 4-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.441 1.441 1.441 1.441-.645 1.441-1.441-.645-1.44-1.441-1.44z"/></svg>`,
          username: "@bmjpaperpack",
          link: "https://www.instagram.com/bmjpaperpack/",
        },
        // LinkedIn
        {
          icon: `<svg fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>`,
          username: "BMJ Paperpack",
          link: "https://www.linkedin.com/company/bmjpaperpack",
        },
        // YouTube
        {
          icon: `<svg fill="currentColor" viewBox="0 0 24 24"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>`,
          username: "BMJ Paperpack",
          link: "https://www.youtube.com/@BMJpaperpack",
        },
        // Facebook
        {
          icon: `<svg fill="currentColor" viewBox="0 0 24 24"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/></svg>`,
          username: "BMJpaperpackid",
          link: "https://www.facebook.com/BMJpaperpackid/",
        },
      ];

      function createSocialRoller() {
        const socialRollerContainer = document.getElementById(
          "socialLinksRollerContainer"
        );
        const rollerContainer =
          socialRollerContainer.querySelector(".social-roller");

        const rollerData = [...socialData, ...socialData];
        rollerContainer.innerHTML = "";

        rollerData.forEach((item, index) => {
          const socialItemDiv = document.createElement("div");
          socialItemDiv.className = "social-item";
          if (index >= socialData.length) {
            socialItemDiv.setAttribute("aria-hidden", "true");
          }

          const linkAnchor = document.createElement("a");
          linkAnchor.href = item.link;
          linkAnchor.target = "_blank";
          linkAnchor.setAttribute("aria-label", `Kunjungi ${item.username}`);

          linkAnchor.innerHTML = item.icon;

          const usernameSpan = document.createElement("span");
          usernameSpan.textContent = item.username;

          linkAnchor.appendChild(usernameSpan);
          socialItemDiv.appendChild(linkAnchor);

          rollerContainer.appendChild(socialItemDiv);
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        createSocialRoller();
        fetchJobData();
      });
    </script>
  </body>
